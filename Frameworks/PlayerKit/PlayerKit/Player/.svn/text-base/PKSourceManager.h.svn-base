#import <Foundation/Foundation.h>

@class PKRecordSource;
@class PKTitleSource;
@class PKResolutionSource;
@class PKEpisodeSource;
@class PKSubtitleSource;
@class PKPlayerStatusSource;
@class PKStatisticSource;
@class PKReachabilitySource;
@class PKDLNASource;

@interface PKSourceManager : NSObject

/// 播放记录源
@property (strong, nonatomic) PKRecordSource *recordSource;

/// 标题源
@property (strong, nonatomic) PKTitleSource *titleSource;

/// 清晰度选择源
@property (strong, nonatomic) PKResolutionSource *resolutionSource;

/// 选集源
@property (strong, nonatomic) PKEpisodeSource *episodeSource;

/// 字幕源
@property (strong, nonatomic) PKSubtitleSource *subtitleSource;

/// 播放器状态源（播放／暂停）
@property (strong, nonatomic) PKPlayerStatusSource *playerStatusSource;

/// 统计源
@property (strong, nonatomic) PKStatisticSource *statisticSource;

/// 网络状态源
@property (strong, nonatomic) PKReachabilitySource *reachabilitySource;

/// DLNA源
@property (strong, nonatomic) PKDLNASource *dlnaSource;

@end
